<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WebScrapingDemo.Views.ContactUsPage">
    <ContentPage.Content>
        <StackLayout Margin="10">
            <Label Text="Subject"/>
            <Entry Placeholder="Please Provide Subject" Text="{Binding Subject}"/>
            <Label Text="Message" />
            <Editor HeightRequest="200" Text="{Binding Message}"/>
            <Button Text="Send" Command="{Binding ContactUsCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>