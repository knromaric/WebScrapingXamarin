<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WebScrapingDemo.Views.AboutUsPage">
    <ContentPage.Content>
        <ListView HasUnevenRows="True" SeparatorVisibility="None" ItemsSource="{Binding AboutUsCollection}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame>
                            <StackLayout>
                                <Label Text="{Binding Title}" FontSize="Large" HorizontalTextAlignment="Center" />
                                <Label Text="{Binding Description}" />
                            </StackLayout>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>